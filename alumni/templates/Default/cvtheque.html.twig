{% extends 'base.html.twig' %}

{% block title %} CV Library {% endblock %}

{% block body %}

    <div class="container-fluid d-flex justify-content-center mt-2">
        {% if cvs is empty %}
            <p>No CV found in the application</p>
        {% else %}
                <div class="row">
                    {% for cv in cvs %}
                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                            <div class="d-flex justify-content-center" >
                                <object type="application/pdf" width="320px" height="500px" data="{{ path('download_cv', { 'document': cv.getDocument().getId()}) }}"></object>
                            </div>
                            <div class="card-body">
                                <a class="d-flex justify-content-center" href="{{ path('download_cv', { 'document': cv.getDocument().getId()}) }}">Details</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>

        {% endif %}
    </div>

{% endblock %}