{% extends 'base.html.twig' %}

{% block title %} CV Library {% endblock %}

{% block body %}

    <div class="container-fluid">
        {% if cvs is empty %}
            <p>No CV found in the application</p>
        {% else %}
                <div class="row">
                    {% for cv in cvs %}
                        <div class="col-xs-1 col-md-4 col-lg-3">
                            <object type="application/pdf" width="250px" height="400px" data="{{ path('download_cv', { 'document': cv.getDocument().getId()}) }}"></object>
                            <div class="card-body">
                                <a href="{{ path('download_cv', { 'document': cv.getDocument().getId()}) }}">Details</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>

        {% endif %}
    </div>

{% endblock %}