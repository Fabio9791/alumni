{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/login.css') }}" rel="stylesheet">

{% endblock %}


{% block body %}
    <div class="login-center"
        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>

                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    
                    <form class="form-signin" action="{{ path('login') }}" method="post">

                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username">
                        </div>
                    
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" id="password" name="_password" placeholder="Password">
                        </div>
                    
                        <div class="col-xs-10 col-xs-offset-1">
                            <button class="btn btn-lg btn-dark btn-block" type="submit" value="login">Login</button>
                        </div>

                        <p class="mt-5 mb-3 text-muted">&copy;2018</p>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}