{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/login.css') }}" rel="stylesheet">

{% endblock %}


{% block body %}

    <form class="form-signin" action="{{ path('login') }}" method="post">

        <div class="text-center mb-4">
            <h1 class="h3 mb-3 font-weight-normal">Please Login</h1>
            <p>In order to continue, please login with the credentials you used during the sign up process.</p>
        </div>

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-label-group mb-2">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username">
        </div>

        <div class="form-label-group">
            <input class="form-control" type="password" id="password" name="_password" placeholder="Password">
        </div>

        <button class="btn btn-lg btn-dark btn-block" type="submit" value="login">Login</button>

    </form>

{% endblock %}