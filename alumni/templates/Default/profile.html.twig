{% extends 'base.html.twig' %}

{% block title %}Your profile{% endblock %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col"></th>
				<th scope="col">User information</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Username :</td>
				<td>{{ user.getUsername() }}</td>
			</tr>
			<tr>
				<td>Firstname :</td>
				<td>{{ user.getFirstname() }}</td>
			</tr>
			<tr>
				<td>Lastname :</td>
				<td>{{ user.getLastname() }}</td>
			</tr>
			<tr>
				<td>Email :</td>
				<td>{{ user.getEmail() }}</td>
			</tr>
			<tr>
				<td>Photo :</td>
				{% if user.getProfilePicture() is empty %}
					<td></td>
				{% else %}
					<td>{{ user.getProfilePicture().getPath() ~ '/' ~ user.getProfilePicture().getName() }}</td>
				{% endif %}
			</tr>
			<tr>
				<td>CV :</td>
				<td>{{ user.getCv() }}</td>
			</tr>
			<tr>
				<td>Photo :</td>
				{% if user.getProfilePicture() is empty %}
					<td></td>
				{% else %}
					<td><img src="{{ path('profile', {'profilePicture': user.getProfilePicture()}) }}" class="img img-responsive img-preview thumbnail" /></td>
				{% endif %}
			</tr>
		</tbody>
	</table>

