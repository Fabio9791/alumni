{% extends 'base.html.twig' %}

{% block title %} Profile {% endblock %}

{% block body %}
<div class="container mt-5 pl-5 pt-5">
	<table class="table">
		<thead>
			<tr>
				<th scope="col"></th>
				<th scope="col">User information</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Username :</td>
				<td>{{ searchedUser.getUsername() }}</td>
			</tr>
			<tr>
				<td>Firstname :</td>
				<td>{{ searchedUser.getFirstname() }}</td>
			</tr>
			<tr>
				<td>Lastname :</td>
				<td>{{ searchedUser.getLastname() }}</td>
			</tr>
			<tr>
				<td>Email :</td>
				<td>{{ searchedUser.getEmail() }}</td>
			</tr>
			<tr>
				<td>Photo :</td>
				{% if searchedUser.getProfilePicture() is empty %}
					<td></td>
				{% else %}
					<td><img src="{{ path('download_document', { 'document': searchedUser.getProfilePicture().getId()}) }}" alt="profile picture"  width="200px" /></td>
				{% endif %}
			</tr>
			<tr>
				<td>CV :</td>
				{% if cv is not empty %}
					<td><object type="application/pdf" width="30%" height="50%" data="{{ path('download_document', { 'document': cv.getId()}) }}"></td>
				{% else %}
					<td>No public cv</td>
				{% endif %}
			</tr>
		</tbody>
	</table>

    <div class="row" id="profilePinBoard">
			
	</div>

</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		const USER = "{{searchedUser.getId()}}";
		console.log(USER);
	</script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js"></script>

    <script type="text/javascript" src="{{ asset('js/postCreator.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/infiniteProfileScroll.js') }}"></script>
	
{% endblock %}
