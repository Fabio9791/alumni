<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
            <a class="navbar-brand" href="{{ path('homepage') }}">Alumni</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
        {% endif %}

        <div class="collapse navbar-collapse" id="navbarsExample04">
            <ul class="navbar-nav mr-auto">
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('profile') }}">Profile <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">CV Library</a>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">Administration</a>
                    </li>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link" onclick="sessionStorage.clear();" href="{{ path('logout') }}">Logout</a>
                    </li>
                {% else %}
                    <a class="navbar-brand" href="{{ path('homepage') }}">Alumni</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <li class="nav-item">
                    <a class="nav-link" href="#">CV Library</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
            <form class="form-inline my-2 my-md-0">
                <input class="form-control" type="text" placeholder="Search...">
            </form>
        </div>
    </nav>
</header>
